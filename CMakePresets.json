{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "default",
        "displayName": "Default Config",
        "description": "Build with system packages.",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "vcpkg",
        "inherits": "default",
        "displayName": "Vcpkg Config",
        "description": "Fetch Dependencies via Vcpkg.",
        "binaryDir": "${sourceDir}/build-vcpkg",
        "toolchainFile": "${sourceDir}/vendor/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    ],
    "buildPresets": [
      {
        "name": "all",
        "configurePreset": "default"
      },
      {
        "name": "all-vcpkg",
        "configurePreset": "vcpkg"
      }
    ],
    "testPresets": [
      {
        "name": "all",
        "configurePreset": "default",
        "output": {"outputOnFailure": true},
        "execution": {"noTestsAction": "error", "stopOnFailure": true}
      },
      {
        "name": "all-vcpkg",
        "inherits":"all",
        "configurePreset": "vcpkg"
      }
    ]
  }